{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
